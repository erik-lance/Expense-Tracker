<Application x:Class="Expense_Tracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Expense_Tracker"
             xmlns:viewModel="clr-namespace:Expense_Tracker.MVVM.ViewModel"
             xmlns:view="clr-namespace:Expense_Tracker.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuOptionTheme.xaml" />
                <ResourceDictionary Source="Theme/TextBoxTheme.xaml" />

                <DataTemplate DataType="{x:Type viewModel:AddDataViewModel}">
                    <view:AddDataView />
                </DataTemplate>
                
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
